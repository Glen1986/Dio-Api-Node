 /* Visit https://aka.ms/tsconfig.json to read more about this file */

{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                   
   
    "module": "commonjs", 
    "moduleResolution": "node",  
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "resolveJsonModule": true, 
    "allowJs": true,                                
    "outDir": "./dist",                           
    "removeComments": true, 
    "esModuleInterop": true, 
    "strict": false,
    "skipLibCheck": true                                
  }
}
